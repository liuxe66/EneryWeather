<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/iv_life"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_life_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_2953ff"
                    android:textSize="12dp"
                    android:text="感冒指数"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_life_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/color_93a8ff"
                    android:text="较易发"
                    android:textSize="10dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_dot_yellow"
                android:layout_gravity="right"/>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>